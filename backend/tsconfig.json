{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",         // <-- incluir raiz de todo el proyecto
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"             // <-- ahora TypeScript ve tambiÃ©n tests
  ],
  "exclude": ["dist", "node_modules"]
}
