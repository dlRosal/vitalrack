{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",         // ← AÑADE ESTA LÍNEA
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"]                   // ← Y ESTA LÍNEA
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["dist"]
  }
